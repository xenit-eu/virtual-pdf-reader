{
  "compilerOptions": {
    "target": "ES2020",
    "lib": [
      "ES2020",
      "dom",
      "dom.iterable",
      "ES2021.String"
    ],

    /* bundler mode */
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "declaration": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* linting */
    "strict": true,
    "noUnusedLocals": true,
    //"noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
  },
  "include": [
    "src"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
