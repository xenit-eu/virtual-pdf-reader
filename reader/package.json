{
  "type": "module",
  "version": "0.1.0",
  "private": true,
  "name": "@contentgrid/virtual-pdf-reader",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "source": "./src/index.ts",
  "types": "./dist/cjs/index.d.ts",
  "sideEffects": [
    "*.css"
  ],
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js"
    },
    "./dist/components/myPdfViewer.css": {
      "import": "./dist/esm/components/myPdfViewer.css",
      "require": "./dist/cjs/components/myPdfViewer.css"
    },
    "./dist/esm/components/myPdfViewer.css": "./dist/esm/components/myPdfViewer.css",
    "./dist/cjs/components/myPdfViewer.css": "./dist/cjs/components/myPdfViewer.css"
  },
  "dependencies": {
    "@tanstack/react-virtual": "^3.8.1",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@ungap/with-resolvers": "^0.1.0",
    "pdfjs-dist": "4.4.168",
    "react-pdf": "9.1.0",
    "tslib": "^2.6.3",
    "typescript": "^5.5.2",
    "vite": "^5.1.3",
    "vite-plugin-dts": "^3.9.1",
    "vite-plugin-static-copy": "^1.0.5"
  },
  "peerDependencies": {
    "react": "^18.3.0",
    "react-dom": "^18.3.0"
  },
  "scripts": {
    "_build": "tsc && vite build",
    "build": "yarn build-js && yarn copy-styles",
    "build-js": "yarn build-js-esm && yarn build-js-cjs && yarn build-js-cjs-package",
    "build-js-esm": "tsc --project tsconfig.build.json --outDir dist/esm",
    "build-js-cjs": "tsc --project tsconfig.build.json --outDir dist/cjs --module commonjs --moduleResolution node --verbatimModuleSyntax false",
    "build-js-cjs-package": "echo '{\n  \"type\": \"commonjs\"\n}' > dist/cjs/package.json",
    "copy-styles": "cpy 'src/**/*.css' dist/esm && cpy 'src/**/*.css' dist/cjs && cpy src/components/myPdfViewer.css dist/style.css",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "test": "jest"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "@vitejs/plugin-react": "^4.0.4",
    "cpy-cli": "^5.0.0",
    "eslint": "^8.49.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "ts-node": "^10.9.2",
    "vite": "^5.1.3",
    "vite-plugin-static-copy": "^1.0.5"
  }
}
